{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "B2 Engine Build",
            "type": "shell",
            "windows": {
                "command": "build.bat"
            },
            "osx": {
                "command": "./build.sh"
            },
            "linux": {
                "command": "./build.sh"
            },
            "options": {
                "cwd": "src/engine"
            },
            "problemMatcher": {
                "owner": "cpptools",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/src/engine"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}